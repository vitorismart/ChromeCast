<section class="alert" ng-controller="TakeoverForm">
  <h2>Channel Takeover</h2>

  <form ng-submit="onFormSubmit()">
    <div class="input-group">
      <label for="takeover-channel">Channel</label>
      <select name="takeover-channel" id="channel" class="takeover-channel" ng-model="takeover.channelId" ng-options="channel.id as channel.name for channel in channels" required>
        <option value="">Select Channel...</option>
      </select>
      <span class="icon-down"></span>
    </div>

    <p class="note">Selected channel will appear on all Chromecasts.</p>

    <div class="submit-buttons">
      <input type="submit" name="submit" value="Start Takeover" ng-hide="takeover.id" />
      <input type="submit" name="submit" value="Save Changes" ng-show="takeover.id" />
      <input type="submit" name="submit" class="btn-red" value="Stop Takeover" ng-show="takeover.id" ng-click="onStop($event)">

      <a href="/" class="btn btn-cancel">Cancel</a>
    </div>

  </form>

</section>

